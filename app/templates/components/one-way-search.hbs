<div class="row">
  <div class="form-group col-sm-12">
    <div class="form-group row">
      <label for="" class="col-sm-2 col-form-label">From</label>
      <div class="col-sm-10">
        {{input value=departureAirport class="form-control" placeholder="Travel from"}}
      </div>
    </div>
  </div>
  <div class="form-group col-sm-12">
    <div class="form-group row">
      <label for="" class="col-sm-2 col-form-label">To</label>
      <div class="col-md-10">
        {{input value=arrivalAirport class="form-control" placeholder="Travel to"}}
      </div>
    </div>
  </div>
</div>

<div class="row">

  <div class="col-sm-12 col-md-6">
    <div class="form-group col-sm-12">
      <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label"><i class="fa fa-calendar"></i> </label>
        <div class="col-md-10">
          {{pikaday-input value=departureDate options=(hash minDate=minDate) onSelection=(action (mut departureDate))
                          class="form-control"}}
        </div>
      </div>
    </div>

  </div>
  <div class="col-sm-12 col-md-6">

    <div class="form-group col-sm-12">
      <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label"><i class="fa fa-user"></i> </label>
        <div class="col-sm-10">
          {{input type="number" class="form-control" value=numberOfAdult min=1}}
        </div>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label"><i class="fa fa-child"></i> </label>
        <div class="col-sm-10">
          {{input type="number" class="form-control" value=numberOfChildren min=0}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-6">

    <div class="form-group col-sm-12">
      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">Class</label>
        <div class="col-md-9">
          {{select-dropdown content=travelClasses selectedValue=initialTravelClass action=(action (mut travelClass))}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-9"></div>
  <div class="col-sm-3">
    <button type="submit" {{action "search" }}class="btn btn-primary">Search</button>

  </div>
</div>
