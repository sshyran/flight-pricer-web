<div class="form-row">
  <div class="form-group col">
    <label>From
      {{input value=departureAirport class="form-control"}}
    </label>
  </div>
  <div class="form-group col">
    <label>To
      {{input value=arrivalAirport class="form-control"}}
    </label>
  </div>
  <div class="form-group col">
    <label>Departure
      {{pikaday-input value=departureDate options=(hash minDate=minDate) onSelection=(action (mut departureDate)) class="form-control"}}
    </label>
  </div>
  <div class="form-group col">
    <label>Number of adult
      {{input type="number" class="form-control" value=numberOfAdult}}
    </label>
  </div>

  <div class="form-group col">
    <label for="class">Travel Class
      {{select-dropdown content=travelClasses selectedValue=initialTravelClass action=(action (mut travelClass))}}
    </label>
  </div>
</div>
