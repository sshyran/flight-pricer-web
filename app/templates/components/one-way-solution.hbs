<div class="row solution">
  <div class="col-9">
    {{#each slice.segments as |segment|}}
      <div class="row">
        <div class="col-4 border border-left-0 border-top-0 border-bottom-0">
          <ul class="list-unstyled">
            <li class="h4"><i class="fa fa-calendar"></i>&nbsp;{{moment-format
              segment.originLocalDepartureTime
              'DD/MM/YYYY'}}</li>
            <li class="h5"><i class="fa fa-clock-o"></i>&nbsp;&nbsp;{{moment-format
              segment.originLocalDepartureTime 'HH:mm'}}</li>
          </ul>

          <h6>{{segment.originAirport}}</h6>

        </div>
        <div class="col-4 border border-left-0 border-top-0 border-bottom-0">

          <strong><i class="fa fa-plane"></i> {{segment.carrierIATA}} {{segment.number}}<br/></strong>
          <ul class="list-unstyled">
            {{#each segment.legs as |leg|}}
              <li class="small text-muted"> {{leg.origin}} - {{leg.destination}} ({{moment-duration
                leg.duration
                'minutes'}}
                )<br/>
                {{leg.operationDisclosure}}
              </li>
            {{/each}}
          </ul>

        </div>
        <div class="col-4 border border-left-0 border-top-0 border-bottom-0">

          <ul class="list-unstyled">
            <li class="h4"><i class="fa fa-calendar"></i>&nbsp;{{moment-format
              segment.destinationLocalArrivalTime
              'DD/MM/YYYY'}}</li>
            <li class="h5"><i class="fa fa-clock-o"></i>&nbsp;&nbsp;{{moment-format
              segment.destinationLocalArrivalTime 'HH:mm'}}</li>
          </ul>
          <h6>{{segment.destinationAirport}}</h6>
          <p class="small text-muted"></p>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="col-3">
    {{#each prices as |price index|}}
      {{#if (eq index 0)}}
        <h6 class="text-success text-right">{{price.requestCurrency}} {{price.requestCurrencyAmount}} <span
          class="small">({{#if  (not-eq price.currency price.requestCurrency) }}{{price.currency}} {{price.amount}}{{/if}}
          {{price.country}})</span></h6>
      {{else}}
        <h6 class="text-warning text-right">{{price.requestCurrency}} {{price.requestCurrencyAmount}} <span
          class="small">({{#if  (not-eq price.currency price.requestCurrency) }}{{price.currency}} {{price.amount}}{{/if}}
          {{price.country}})</span></h6>
      {{/if}}
    {{/each}}

  </div>


</div>