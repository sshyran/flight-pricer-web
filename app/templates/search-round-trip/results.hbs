<div class="container-fluid">
  <div class="results row ">

    <div class="col-6 col-md-2">
      <div class="filter-criteria">
        <h6>Connection filter</h6>
        Max Number of Stop:
        {{input type="number" value=maxConnection}}
      </div>

      {{filter/airline-filter airlines=model.airlines}}

      <div class="filter-criteria">
        <h6>Time filters</h6>
        <ul class="list-unstyled">
          {{#each model.uniqueAirlines as |airline|}}
            <li>{{airline}}</li>
          {{/each}}
        </ul>
      </div>

    </div>

    <div class="col-12 col-md-10">
      {{#ember-collection
        items=sortedSolutions
        cell-layout=(percentage-columns-layout sortedSolutions.length columnWidth rowHeight) as |item index|
      }}
        {{round-trip-solution solution=item}}
      {{/ember-collection}}
    </div>
  </div>

  {{outlet}}
</div>
